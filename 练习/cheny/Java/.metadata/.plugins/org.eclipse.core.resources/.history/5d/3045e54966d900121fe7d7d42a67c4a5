		taleft = new JTextArea(20,7);
		Border b = BorderFactory.createLineBorder(Color.BLACK);
		taleft.setBorder(b);
		JButton jbright = new JButton("右按钮");
		JButton jbtop = new JButton("上按钮");
		JButton jbbuttom = new JButton("下按钮");
